commands:
  01_install_yarn_repo:
    command: 'curl -sL https://dl.yarnpkg.com/rpm/yarn.repo -o /etc/yum.repos.d/yarn.repo'
  02_install_yarn:
    command: 'yum install -y yarn'

container_commands:
  01_install_vite:
    command: 'npm install -g create-vite && npm install vite'

  02_yarn_install:
    command: 'yarn install'
    cwd: '/var/www/html'

  03_yarn_build:
    command: 'yarn build'
    cwd: '/var/www/html'